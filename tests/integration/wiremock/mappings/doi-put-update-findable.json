{
  "request": {
    "method": "PUT",
    "urlPathPattern": "/dois/([^/]+/[^/]+)",
    "headers": {
      "Content-Type": {
        "equalTo": "application/vnd.api+json"
      },
      "Authorization": {
        "matches": "Basic .*"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.data.type",
        "equalTo": "dois"
      },
      {
        "matchesJsonPath": "$.data.attributes.event",
        "equalTo": "publish"
      },
      {
        "matchesJsonPath": "$.data.attributes.creators"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/vnd.api+json"
    },
    "bodyFileName": "doi-updated-findable-simple.json",
    "transformers": ["response-template"]
  }
}
